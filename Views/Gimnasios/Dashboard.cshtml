function initLogsTab() {
    $('.filtro-log').click(function() {
        $('.filtro-log').removeClass('active');
        $(this).addClass('active');
        filtroLogActual = $(this).data('filtro');
        cargarTablaLogs();
    });
}

function cargarTablaLogs() {
    if (tablaLogs) { tablaLogs.destroy(); }
    tablaLogs = $('#logsTable').DataTable({
        ajax: { url: '/Gimnasios/GetLogs', data: { gimnasioId, filtro: filtroLogActual }, dataSrc: '' },
        columns: [
            { data: 'message' },
            { data: 'monto', render: d => `<span class="${d >= 0 ? 'text-success' : 'text-danger'} fw-bold">${d >= 0 ? '+' : ''}$${d.toFixed(2)}</span>` },
            { data: 'fecha', render: d => new Date(d).toLocaleString('es-MX') },
            { data: null, orderable: false, className: 'text-end', render: (d,t,r) => `
                <button class="btn btn-sm btn-icon btn-light-danger" onclick="eliminarLog('${r.id}')" title="Eliminar"><i class="bi bi-trash"></i></button>
            ` }
        ],
        order: [[2, 'desc']]
    });
}

$('#btnRegistrarLog').click(function() {
    const message = $('#logDescripcion').val();
    const monto = $('#logMonto').val();
    if (!message || monto === '') { toastr.error('Complete todos los campos'); return; }
    $.post('/Gimnasios/CrearLog', { GimnasioId: gimnasioId, Message: message, Monto: monto }, function(r) {
        if (r.success) { $('#logDescripcion').val(''); $('#logMonto').val(''); tablaLogs.ajax.reload(); toastr.success(r.message); }
    }).fail(xhr => toastr.error(xhr.responseJSON?.message || 'Error'));
});

function eliminarLog(id) {
    if (confirm('¿Eliminar este registro?')) {
        $.post('/Gimnasios/EliminarLog', { id, gimnasioId }, function(r) {
            if (r.success) { tablaLogs.ajax.reload(); toastr.success(r.message); }
        }).fail(xhr => toastr.error(xhr.responseJSON?.message || 'Error'));
    }
}

$('#btnExportLogsExcel').click(() => window.location.href = `/Gimnasios/ExportLogsExcel?gimnasioId=${gimnasioId}&filtro=${filtroLogActual}`);

