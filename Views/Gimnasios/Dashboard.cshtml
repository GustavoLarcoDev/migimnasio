@model Gimnasio.Models.Gym

@{
ViewData["Title"] = "Dashboard - " + Model.GimnasioNombre;
var gimnasioId = Model.GimnasioId;
}

<!-- Toolbar -->
<div class="px-5 pt-4 mb-4">
    <!-- Header Section -->
    <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
        <div>
            <h1 class="fw-bolder text-dark mb-2">Dashboard</h1>
            <p class="text-muted mb-0">Bienvenido, <strong>@Model.DuenoGimnasio</strong></p>
        </div>
        <div>
            <a href="@Url.Action("Logout", "Gimnasios")" class="btn btn-sm btn-light-danger">
                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
            </a>
        </div>
    </div>
</div>

<!-- Navigation Tabs -->
<div class="px-5">
    <ul class="nav nav-tabs nav-tabs-line mb-4" id="dashboardTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active fw-semibold" data-bs-toggle="tab" data-bs-target="#clientesTab" type="button">
                <i class="bi bi-people me-2"></i>Clientes
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#logsTab" type="button">
                <i class="bi bi-journal-text me-2"></i>Logs+
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#ventasTab" type="button">
                <i class="bi bi-graph-up me-2"></i>Ventas
            </button>
        </li>
    </ul>
</div>

<div class="tab-content px-5 pb-5" id="dashboardTabsContent">
    <!-- TAB CLIENTES -->
    <div class="tab-pane fade show active" id="clientesTab" role="tabpanel">
        <!-- Action Buttons - Centered -->
        <div class="d-flex flex-wrap justify-content-center gap-2 pt-0 pb-2">
            <button id="btnCrearCliente" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Cliente
            </button>
            <button id="btnExportClientesExcel" class="btn btn-success">
                <i class="bi bi-file-earmark-excel me-2"></i>Exportar
            </button>
            <button id="btnImportarExcel" class="btn btn-outline-primary">
                <i class="bi bi-upload me-2"></i>Importar Excel
            </button>
        </div>
        <!-- Stats Cards -->
        <div class="row g-4 mb-1">
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-light-primary">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted fw-semibold d-block fs-7 mb-1">Total Clientes</span>
                                <span class="text-dark fw-bolder fs-2x" id="totalClientes">0</span>
                            </div>
                            <div class="bg-primary rounded-3 p-3"><i class="bi bi-people-fill text-white fs-2x"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-light-success">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted fw-semibold d-block fs-7 mb-1">Clientes Activos</span>
                                <span class="text-dark fw-bolder fs-2x" id="clientesActivos">0</span>
                            </div>
                            <div class="bg-success rounded-3 p-3"><i class="bi bi-check-circle-fill text-white fs-2x"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-light-danger">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted fw-semibold d-block fs-7 mb-1">Clientes Vencidos</span>
                                <span class="text-dark fw-bolder fs-2x" id="clientesVencidos">0</span>
                            </div>
                            <div class="bg-danger rounded-3 p-3"><i class="bi bi-x-circle-fill text-white fs-2x"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-light-info">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted fw-semibold d-block fs-7 mb-1">Ingresos del Mes</span>
                                <span class="text-dark fw-bolder fs-2x" id="ingresosMes">$0</span>
                            </div>
                            <div class="bg-info rounded-3 p-3"><i class="bi bi-currency-dollar text-white fs-2x"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Import Zone (hidden by default) -->
        <div id="importZone" class="card border-2 border-dashed mb-4 d-none">
            <div class="card-body text-center py-5">
                <i class="bi bi-cloud-upload fs-1 text-primary mb-3 d-block"></i>
                <h5>Arrastra tu archivo Excel aquí</h5>
                <p class="text-muted">O haz clic para seleccionar (solo Nombre y Apellido son obligatorios)</p>
                <input type="file" id="excelFileInput" accept=".xlsx,.xls" class="d-none">
            </div>
        </div>

        <!-- Clients Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <table id="clientesTable" class="table table-row-bordered align-middle gs-0 gy-3">
                    <thead>
                    <tr class="fw-bold text-muted">
                        <th>Cliente</th>
                        <th>Precio</th>
                        <th>Fecha Inicio</th>
                        <th>Vencimiento</th>
                        <th>Días Rest.</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                    </thead>
                    <tbody class="text-gray-600 fw-semibold"></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- TAB LOGS+ -->
    <div class="tab-pane fade" id="logsTab" role="tabpanel">
        <!-- Quick Add Form -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3"><i class="bi bi-plus-circle me-2"></i>Registrar Movimiento</h5>
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label">Descripción</label>
                        <input type="text" class="form-control form-control-lg" id="logDescripcion" placeholder="Ej: Vendido un Gatorade">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Monto ($)</label>
                        <input type="number" step="0.01" class="form-control form-control-lg" id="logMonto" placeholder="4 o -15">
                    </div>
                    <div class="col-md-3">
                        <button id="btnRegistrarLog" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-check-lg me-2"></i>Registrar
                        </button>
                    </div>
                </div>
                <small class="text-muted mt-2 d-block">Usa valores positivos para ingresos y negativos para gastos</small>
            </div>
        </div>

        <!-- Filters and Export -->
        <div class="d-flex gap-2 mb-4 flex-wrap">
            <div class="btn-group" role="group">
                <button class="btn btn-outline-primary filtro-log active" data-filtro="dia">Hoy</button>
                <button class="btn btn-outline-primary filtro-log" data-filtro="semana">Semana</button>
                <button class="btn btn-outline-primary filtro-log" data-filtro="mes">Mes</button>
                <button class="btn btn-outline-primary filtro-log" data-filtro="anio">Año</button>
            </div>
            <button id="btnExportLogsExcel" class="btn btn-success ms-auto"><i class="bi bi-file-earmark-excel me-2"></i>Exportar</button>
        </div>

        <!-- Logs Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <table id="logsTable" class="table table-row-bordered align-middle gs-0 gy-3">
                    <thead>
                    <tr class="fw-bold text-muted">
                        <th>Descripción</th>
                        <th>Monto</th>
                        <th>Fecha</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- TAB VENTAS -->
    <div class="tab-pane fade" id="ventasTab" role="tabpanel">
        <!-- Refresh Button -->
        <div class="d-flex justify-content-end mb-3">
            <button id="btnRefrescarVentas" class="btn btn-outline-primary"><i class="bi bi-arrow-clockwise me-2"></i>Refrescar Ventas</button>
        </div>
        
        <!-- Ventas Stats Cards -->
        <div class="row g-4 mb-5">
            <div class="col-xl-4 col-md-6">
                <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body text-white">
                        <span class="d-block mb-2 opacity-75">Ingresos del Día</span>
                        <span class="fs-2x fw-bolder" id="ventasIngresosDia">$0</span>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <div class="card-body text-white">
                        <span class="d-block mb-2 opacity-75">Gastos del Día</span>
                        <span class="fs-2x fw-bolder" id="ventasGastosDia">$0</span>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                    <div class="card-body text-white">
                        <span class="d-block mb-2 opacity-75">Ganancia Neta del Día</span>
                        <span class="fs-2x fw-bolder" id="ventasGananciaDia">$0</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check text-primary fs-1 mb-2"></i>
                        <h6 class="text-muted">Membresías 30 días (mes)</h6>
                        <span class="fs-3 fw-bold" id="ventasMembresias">$0</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-person-walking text-info fs-1 mb-2"></i>
                        <h6 class="text-muted">Clientes Diarios Hoy</h6>
                        <span class="fs-3 fw-bold" id="ventasClientesDiarios">0</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-graph-up-arrow text-success fs-1 mb-2"></i>
                        <h6 class="text-muted">Ganancia del Mes</h6>
                        <span class="fs-3 fw-bold" id="ventasGananciaMes">$0</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="fw-bold mb-0">Ingresos vs Gastos (Hoy)</h5>
                    </div>
                    <div class="card-body"><div id="chartPie"></div></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="fw-bold mb-0">Ventas Diarias (Última Semana)</h5>
                    </div>
                    <div class="card-body"><div id="chartDiario"></div></div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0">Usuarios Diarios</h5>
                        <button id="btnEnviarMensajesMasivos" class="btn btn-sm btn-success">
                            <i class="bi bi-whatsapp me-2"></i>Mensaje
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="max-height: 250px; overflow-y: auto;">
                            <table id="tablaUsuariosDiarios" class="table table-row-bordered align-middle gs-0 gy-3">
                                <thead>
                                    <tr class="fw-bold text-muted">
                                        <th>Nombre</th>
                                        <th>Teléfono</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Cliente -->
<div class="modal fade" id="clienteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h3 class="modal-title fw-bolder" id="modalTitle">Nuevo Cliente</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="clienteForm">
                    <input type="hidden" id="clienteId" name="ClienteId" />
                    <input type="hidden" name="GimnasioId" value="@gimnasioId" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold required">Nombre</label>
                            <input type="text" class="form-control" name="Nombre" id="nombre" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold required">Apellido</label>
                            <input type="text" class="form-control" name="Apellido" id="apellido" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control" name="Email" id="email" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold required">Teléfono</label>
                            <input type="tel" class="form-control" name="Telefono" id="telefono" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dirección</label>
                        <input type="text" class="form-control" name="Direccion" id="direccion" />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold required">Días</label>
                            <input type="number" class="form-control" name="Dias" id="dias" min="1" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold required">Precio ($)</label>
                            <input type="number" step="0.01" class="form-control" name="Precio" id="precio" min="0" required />
                        </div>
                        <div class="col-md-4 mb-3 pt-4">
                            <div class="form-check form-switch mt-2">
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" name="EsDiario" id="esDiario" value="true" />
                                <label class="form-check-label fw-semibold" for="esDiario">Es Diario</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="btnGuardarCliente" class="btn btn-primary"><i class="bi bi-save me-2"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Renovar -->
<div class="modal fade" id="renovarModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h3 class="modal-title fw-bolder">Renovar Membresía</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="renovarClienteId" />
                <p class="text-muted mb-4">Cliente: <strong id="renovarClienteNombre"></strong></p>
                <div class="mb-3">
                    <label class="form-label fw-semibold required">Días</label>
                    <input type="number" class="form-control" id="renovarDias" min="1" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold required">Precio ($)</label>
                    <input type="number" step="0.01" class="form-control" id="renovarPrecio" min="0" required />
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="btnConfirmarRenovar" class="btn btn-success"><i class="bi bi-arrow-repeat me-2"></i>Renovar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Import Results -->
<div class="modal fade" id="importResultModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h3 class="modal-title fw-bolder">Resultado de Importación</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="importResultBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
const gimnasioId = '@gimnasioId';
let tablaClientes, tablaLogs, tablaUsuariosDiarios;
let modoEdicion = false;
let filtroLogActual = 'dia';

$(document).ready(function () {
    cargarEstadisticas();
    cargarTablaClientes();
    initLogsTab();
    
    // Tab change handlers
    $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function(e) {
        if (e.target.dataset.bsTarget === '#ventasTab') {
            cargarVentasStats();
            cargarCharts(); // This will also init the new table
        } else if (e.target.dataset.bsTarget === '#logsTab') {
            if (!tablaLogs) cargarTablaLogs();
        }
    });
});

// ===== CLIENTES =====
function cargarEstadisticas() {
    $.get('/Gimnasios/GetDashboardStats', { gimnasioId }, function(data) {
        $('#totalClientes').text(data.totalClientes);
        $('#clientesActivos').text(data.clientesActivos);
        $('#clientesVencidos').text(data.clientesVencidos);
        $('#ingresosMes').text('$' + data.ingresosMes.toFixed(2));
    });
}

function cargarTablaClientes() {
    tablaClientes = $('#clientesTable').DataTable({
        ajax: { url: '/Gimnasios/GetClientes', data: { gimnasioId }, dataSrc: '' },
        columns: [
            { data: null, render: (d,t,r) => `<strong>${r.nombreCompleto}</strong><br><small class="text-muted">${r.telefono || '-'}</small>` },
            { data: 'precio', render: d => '$' + d.toFixed(2) },
            { data: 'fechaDeCreacion', render: d => new Date(d).toLocaleDateString('es-MX') },
            { data: 'fechaQueTermina', render: d => new Date(d).toLocaleDateString('es-MX') },
            { data: 'diasRestantes', render: d => d < 0 ? '<span class="badge bg-danger">Vencido</span>' : `<span class="badge bg-${d <= 3 ? 'warning' : 'success'}">${d} días</span>` },
            { data: null, orderable: false, className: 'text-end', render: (d,t,r) => `
                <button class="btn btn-sm btn-icon btn-light-success" onclick="abrirModalRenovar('${r.clienteId}','${r.nombreCompleto}')" title="Renovar"><i class="bi bi-arrow-repeat"></i></button>
                <button class="btn btn-sm btn-icon btn-light-primary" onclick="editarCliente('${r.clienteId}')" title="Editar"><i class="bi bi-pencil"></i></button>
                <button class="btn btn-sm btn-icon btn-light-danger" onclick="eliminarCliente('${r.clienteId}','${r.nombreCompleto}')" title="Eliminar"><i class="bi bi-trash"></i></button>
            ` }
        ],
        order: [[5, 'asc']],
        responsive: true
    });
}

$('#btnCrearCliente').click(function() {
    modoEdicion = false;
    $('#modalTitle').text('Nuevo Cliente');
    $('#clienteForm')[0].reset();
    $('#clienteId').val('');
    $('#clienteModal').modal('show');
});

$('#btnGuardarCliente').click(function() {
    if (!$('#clienteForm')[0].checkValidity()) { $('#clienteForm')[0].reportValidity(); return; }
    const url = modoEdicion ? '/Gimnasios/EditarCliente' : '/Gimnasios/CrearCliente';
    $.post(url, $('#clienteForm').serialize(), function(r) {
        if (r.success) { $('#clienteModal').modal('hide'); tablaClientes.ajax.reload(); cargarEstadisticas(); toastr.success(r.message); }
    }).fail(xhr => toastr.error(xhr.responseJSON?.message || 'Error'));
});

function editarCliente(id) {
    $.get('/Gimnasios/GetCliente', { id, gimnasioId }, function(d) {
        modoEdicion = true;
        $('#modalTitle').text('Editar Cliente');
        $('#clienteId').val(d.clienteId);
        $('#nombre').val(d.nombre);
        $('#apellido').val(d.apellido);
        $('#email').val(d.email);
        $('#telefono').val(d.telefono);
        $('#direccion').val(d.direccion);
        $('#dias').val(d.dias);
        $('#precio').val(d.precio);
        $('#esDiario').prop('checked', d.esDiario);
        $('#clienteModal').modal('show');
    });
}

function eliminarCliente(id, nombre) {
    if (confirm(`¿Eliminar a "${nombre}"?`)) {
        $.post('/Gimnasios/EliminarCliente', { id, gimnasioId }, function(r) {
            if (r.success) { tablaClientes.ajax.reload(); cargarEstadisticas(); toastr.success(r.message); }
        }).fail(xhr => toastr.error(xhr.responseJSON?.message || 'Error'));
    }
}

function abrirModalRenovar(id, nombre) {
    $('#renovarClienteId').val(id);
    $('#renovarClienteNombre').text(nombre);
    $('#renovarDias').val('30');
    $('#renovarPrecio').val('');
    $('#renovarModal').modal('show');
}

$('#btnConfirmarRenovar').click(function() {
    const id = $('#renovarClienteId').val();
    const dias = $('#renovarDias').val();
    const precio = $('#renovarPrecio').val();
    if (!dias || !precio) { toastr.error('Complete todos los campos'); return; }
    $.post('/Gimnasios/RenovarCliente', { id, gimnasioId, dias, precio }, function(r) {
        if (r.success) { $('#renovarModal').modal('hide'); tablaClientes.ajax.reload(); cargarEstadisticas(); toastr.success(r.message); }
    }).fail(xhr => toastr.error(xhr.responseJSON?.message || 'Error'));
});

$('#btnExportClientesExcel').click(() => window.location.href = '/Gimnasios/ExportClientesExcel?gimnasioId=' + gimnasioId);

// Import Excel
$('#btnImportarExcel').click(() => $('#importZone').toggleClass('d-none'));
$('#importZone').on('click', () => $('#excelFileInput').click());
$('#excelFileInput').on('change', function() { if (this.files.length) uploadExcel(this.files[0]); });
$('#importZone').on('dragover', e => { e.preventDefault(); $(e.currentTarget).addClass('border-primary'); });
$('#importZone').on('dragleave', e => $(e.currentTarget).removeClass('border-primary'));
$('#importZone').on('drop', function(e) { e.preventDefault(); $(this).removeClass('border-primary'); if (e.originalEvent.dataTransfer.files.length) uploadExcel(e.originalEvent.dataTransfer.files[0]); });

function uploadExcel(file) {
    const formData = new FormData();
    formData.append('file', file);
    formData.append('gimnasioId', gimnasioId);
    $.ajax({
        url: '/Gimnasios/ImportarClientesExcel',
        type: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        success: function(r) {
            let html = `<div class="alert alert-success"><strong>${r.clientesCreados}</strong> clientes creados</div>`;
            if (r.clientesOmitidos > 0) html += `<div class="alert alert-warning"><strong>${r.clientesOmitidos}</strong> omitidos (duplicados)</div>`;
            if (r.erroresCount > 0) html += `<div class="alert alert-danger"><strong>${r.erroresCount}</strong> errores</div>`;
            $('#importResultBody').html(html);
            $('#importResultModal').modal('show');
            tablaClientes.ajax.reload();
            cargarEstadisticas();
            $('#importZone').addClass('d-none');
        },
        error: xhr => toastr.error(xhr.responseJSON?.message || 'Error al importar')
    });
}

