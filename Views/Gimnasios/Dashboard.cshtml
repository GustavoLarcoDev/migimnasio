@model Gimnasio.Models.Gym

@{
ViewData["Title"] = "Dashboard - " + Model.GimnasioNombre;
var gimnasioId = Model.GimnasioId;
}

<!-- Toolbar -->
<div class="d-flex flex-wrap align-items-center mb-6 px-5">
    <div>
        <h1 class="fw-bolder text-dark mb-2">Dashboard</h1>
        <p class="text-muted mb-0">
            Bienvenido, <strong>@Model.DuenoGimnasio</strong>
        </p>
    </div>

    <div class="d-flex gap-2 ms-auto">
        <button id="btnExportClientesExcel" class="btn btn-sm btn-success">
            <i class="bi bi-file-earmark-excel me-2"></i>
            Exportar Clientes
        </button>

        <button id="btnCrearCliente" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle me-2"></i>
            Nuevo Cliente
        </button>

        <a href="@Url.Action("Logout", "Gimnasios")" class="btn btn-sm btn-light-danger">
            <i class="bi bi-box-arrow-right me-2"></i>
            Cerrar Sesión
        </a>
    </div>
</div>

<!-- Stats Cards Row 1 -->
<div class="row g-4 mb-5 px-5">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100 bg-light-primary">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-7 mb-1">Total Clientes</span>
                        <span class="text-dark fw-bolder fs-2x" id="totalClientes">0</span>
                    </div>
                    <div class="bg-primary rounded-3 p-3">
                        <i class="bi bi-people-fill text-white fs-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 px-5">
        <div class="card border-0 shadow-sm h-100 bg-light-success">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-7 mb-1">Clientes Activos</span>
                        <span class="text-dark fw-bolder fs-2x" id="clientesActivos">0</span>
                    </div>
                    <div class="bg-success rounded-3 p-3">
                        <i class="bi bi-check-circle-fill text-white fs-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 px-5">
        <div class="card border-0 shadow-sm h-100 bg-light-danger">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-7 mb-1">Clientes Vencidos</span>
                        <span class="text-dark fw-bolder fs-2x" id="clientesVencidos">0</span>
                    </div>
                    <div class="bg-danger rounded-3 p-3">
                        <i class="bi bi-x-circle-fill text-white fs-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 px-5">
        <div class="card border-0 shadow-sm h-100 bg-light-info">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-7 mb-1">Ingresos del Mes</span>
                        <span class="text-dark fw-bolder fs-2x" id="ingresosMes">$0</span>
                    </div>
                    <div class="bg-info rounded-3 p-3">
                        <i class="bi bi-currency-dollar text-white fs-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards Row 2 -->
<div class="row g-4 mb-5 px-5">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="symbol symbol-50px me-3 bg-light-warning">
                        <i class="bi bi-calendar-plus text-warning fs-2x"></i>
                    </div>
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-8 mb-1">Nuevos Hoy</span>
                        <span class="text-dark fw-bold fs-4" id="clientesNuevosHoy">0</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 px-5">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="symbol symbol-50px me-3 bg-light-primary">
                        <i class="bi bi-calendar-check text-primary fs-2x"></i>
                    </div>
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-8 mb-1">Nuevos Este Mes</span>
                        <span class="text-dark fw-bold fs-4" id="clientesNuevosMes">0</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 px-5">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="symbol symbol-50px me-3 bg-light-success">
                        <i class="bi bi-cash-stack text-success fs-2x"></i>
                    </div>
                    <div class="flex-grow-1">
                        <span class="text-muted fw-semibold d-block fs-8 mb-1">Ingresos Hoy</span>
                        <span class="text-dark fw-bold fs-4" id="ingresosHoy">$0</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row g-4 mb-5 px-5">
    <!-- Próximos a Vencer -->
    <div class="col-xl-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 pt-5">
                <h3 class="card-title fw-bold text-dark">
                    <i class="bi bi-clock-history text-warning me-2"></i>
                    Próximos a Vencer
                </h3>
            </div>
            <div class="card-body pt-2" id="proximosVencerContainer" style="max-height: 400px; overflow-y: auto;">
                <div class="text-center text-muted py-5">
                    <i class="bi bi-hourglass-split fs-2x mb-3 d-block"></i>
                    <p>Cargando...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Clientes -->
    <div class="col-xl-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 pt-5 pb-3">
                <h3 class="card-title fw-bold text-dark">Todos los Clientes</h3>
            </div>
            <div class="card-body pt-0">
                <table id="clientesTable" class="table table-row-bordered table-row-gray-100 align-middle gs-0 gy-3">
                    <thead>
                    <tr class="fw-bold text-muted">
                        <th class="min-w-150px">Cliente</th>
                        <th class="min-w-120px">Contacto</th>
                        <th class="min-w-100px">Membresía</th>
                        <th class="min-w-100px">Vencimiento</th>
                        <th class="min-w-80px">Estado</th>
                        <th class="min-w-100px text-end">Acciones</th>
                    </tr>
                    </thead>
                    <tbody class="text-gray-600 fw-semibold">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Cliente -->
<div class="modal fade" id="clienteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h3 class="modal-title fw-bolder" id="modalTitle">Nuevo Cliente</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form id="clienteForm">
                    <input type="hidden" id="clienteId" name="ClienteId" />
                    <input type="hidden" name="GimnasioId" value="@gimnasioId" />

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold required">Nombre</label>
                            <input type="text" class="form-control form-control-lg" name="Nombre" id="nombre" required />
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold required">Apellido</label>
                            <input type="text" class="form-control form-control-lg" name="Apellido" id="apellido" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control form-control-lg" name="Email" id="email" />
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold required">Teléfono</label>
                            <input type="tel" class="form-control form-control-lg" name="Telefono" id="telefono" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Dirección</label>
                        <input type="text" class="form-control form-control-lg" name="Direccion" id="direccion" />
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-semibold required">Días de Membresía</label>
                            <input type="number" class="form-control form-control-lg" name="Dias" id="dias" min="1" required />
                        </div>

                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-semibold required">Precio ($)</label>
                            <input type="number" step="0.01" class="form-control form-control-lg" name="Precio" id="precio" min="0" required />
                        </div>

                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-semibold">Tipo</label>
                            <div class="form-check form-switch form-check-custom mt-3">
                                <!-- Hidden input for false value when unchecked -->
                                <input type="hidden" name="EsDiario" value="false" />
                                <input class="form-check-input" type="checkbox" name="EsDiario" id="esDiario" value="true" />
                                <label class="form-check-label fw-semibold" for="esDiario">
                                    Es Diario
                                </label>
                            </div>
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" id="btnGuardarCliente" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i>
                    Guardar
                </button>
            </div>

        </div>
    </div>
</div>

<!-- Modal Renovar Cliente -->
<div class="modal fade" id="renovarModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h3 class="modal-title fw-bolder">Renovar Membresía</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="renovarClienteId" />
                <p class="text-muted mb-4">Cliente: <strong id="renovarClienteNombre"></strong></p>

                <div class="mb-4">
                    <label class="form-label fw-semibold required">Días de Renovación</label>
                    <input type="number" class="form-control form-control-lg" id="renovarDias" min="1" required />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold required">Precio ($)</label>
                    <input type="number" step="0.01" class="form-control form-control-lg" id="renovarPrecio" min="0" required />
                </div>
            </div>

            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" id="btnConfirmarRenovar" class="btn btn-success">
                    <i class="bi bi-arrow-repeat me-2"></i>
                    Renovar
                </button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
    const gimnasioId = '@gimnasioId';
    let tablaClientes;
    let modoEdicion = false;

    $(document).ready(function () {
        cargarEstadisticas();
        cargarTablaClientes();
    });

    function cargarEstadisticas() {
        $.ajax({
            url: '/Gimnasios/GetDashboardStats',
            type: 'GET',
            data: { gimnasioId: gimnasioId },
            success: function (data) {
                $('#totalClientes').text(data.totalClientes);
                $('#clientesActivos').text(data.clientesActivos);
                $('#clientesVencidos').text(data.clientesVencidos);
                $('#clientesNuevosHoy').text(data.clientesNuevosHoy);
                $('#clientesNuevosMes').text(data.clientesNuevosMes);
                $('#ingresosMes').text('$' + data.ingresosMes.toFixed(2));
                $('#ingresosHoy').text('$' + data.ingresosHoy.toFixed(2));

                mostrarProximosVencer(data.proximosVencer);
            },
            error: function () {
                toastr.error('Error al cargar estadísticas');
            }
        });
    }

    function mostrarProximosVencer(clientes) {
        const container = $('#proximosVencerContainer');
        if (clientes.length === 0) {
            container.html(`
                <div class="text-center text-muted py-5">
                    <i class="bi bi-check-circle fs-2x mb-3 d-block text-success"></i>
                    <p>No hay clientes próximos a vencer</p>
                </div>
            `);
            return;
        }

        let html = '';
        clientes.forEach(cliente => {
            const badgeClass = cliente.diasRestantes <= 2 ? 'badge-light-danger' : 'badge-light-warning';
            html += `
                <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                    <div class="symbol symbol-40px me-3 bg-light-warning">
                        <i class="bi bi-person text-warning"></i>
                    </div>
                    <div class="flex-grow-1">
                        <span class="text-dark fw-bold d-block mb-1">${cliente.nombreCompleto}</span>
                        <span class="text-muted fw-semibold fs-8">${cliente.telefono || 'Sin teléfono'}</span>
                    </div>
                    <div class="text-end">
                        <span class="badge ${badgeClass} mb-1">${cliente.diasRestantes} día${cliente.diasRestantes !== 1 ? 's' : ''}</span>
                        <span class="text-muted fw-semibold fs-8 d-block">${new Date(cliente.fechaQueTermina).toLocaleDateString('es-MX')}</span>
                    </div>
                </div>
            `;
        });
        container.html(html);
    }

    function cargarTablaClientes() {
        tablaClientes = $('#clientesTable').DataTable({
            ajax: {
                url: '/Gimnasios/GetClientes',
                type: 'GET',
                data: { gimnasioId: gimnasioId },
                dataSrc: ''
            },
            columns: [
                {
                    data: null,
                    render: function(data, type, row) {
                        return `
                            <div class="d-flex align-items-center">
                                <div class="symbol symbol-40px me-3">
                                    <div class="symbol-label bg-light-primary">
                                        <i class="bi bi-person text-primary fs-4"></i>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start flex-column">
                                    <span class="text-dark fw-bold fs-6">${row.nombreCompleto}</span>
                                    <span class="text-muted fw-semibold d-block fs-8">${row.direccion || 'Sin dirección'}</span>
                                </div>
                            </div>
                        `;
                    }
                },
                {
                    data: null,
                    render: function(data, type, row) {
                        return `
                            <div class="d-flex flex-column">
                                ${row.email ? `<span class="text-dark fw-semibold mb-1"><i class="bi bi-envelope me-1 text-muted"></i>${row.email}</span>` : ''}
                                <span class="text-muted fw-semibold"><i class="bi bi-telephone me-1"></i>${row.telefono}</span>
                            </div>
                        `;
                    }
                },
                {
                    data: null,
                    render: function(data, type, row) {
                        const tipo = row.esDiario ? '<span class="badge badge-light-info">Diario</span>' : '<span class="badge badge-light-primary">Regular</span>';
                        return `
                            <div>
                                ${tipo}
                                <div class="text-muted fw-semibold fs-8 mt-1">${row.dias} días - $${row.precio.toFixed(2)}</div>
                            </div>
                        `;
                    }
                },
                {
                    data: 'fechaQueTermina',
                    render: function(data, type, row) {
                        const fecha = new Date(data).toLocaleDateString('es-MX');
                        let badge = '';
                        if (row.diasRestantes < 0) {
                            badge = `<span class="badge badge-light-danger">Vencido</span>`;
                        } else if (row.diasRestantes <= 3) {
                            badge = `<span class="badge badge-light-warning">${row.diasRestantes} días</span>`;
                        } else {
                            badge = `<span class="badge badge-light-success">${row.diasRestantes} días</span>`;
                        }
                        return `
                            <div>
                                <span class="text-dark fw-semibold d-block">${fecha}</span>
                                ${badge}
                            </div>
                        `;
                    }
                },
                {
                    data: 'estaActivo',
                    render: function(data) {
                        return data
                            ? '<span class="badge badge-light-success">Activo</span>'
                            : '<span class="badge badge-light-danger">Vencido</span>';
                    }
                },
                {
                    data: null,
                    orderable: false,
                    className: 'text-end',
                    render: function(data, type, row) {
                        return `
                            <div class="d-flex justify-content-end gap-1">
                                <button class="btn btn-icon btn-bg-light btn-active-color-success btn-sm" onclick="abrirModalRenovar('${row.clienteId}', '${row.nombreCompleto}')" title="Renovar">
                                    <i class="bi bi-arrow-repeat fs-5"></i>
                                </button>
                                <button class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" onclick="editarCliente('${row.clienteId}')" title="Editar">
                                    <i class="bi bi-pencil fs-5"></i>
                                </button>
                                <button class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm" onclick="eliminarCliente('${row.clienteId}', '${row.nombreCompleto}')" title="Eliminar">
                                    <i class="bi bi-trash fs-5"></i>
                                </button>
                            </div>
                        `;
                    }
                }
            ],
            order: [[3, 'asc']], // Ordenar por fecha de vencimiento
            language: {
                url: '//cdn.datatables.net/plug-ins/2.3.6/i18n/es-ES.json'
            },
            responsive: true,
            pageLength: 10
        });
    }

    // Crear Cliente
    $('#btnCrearCliente').click(function () {
        modoEdicion = false;
        $('#modalTitle').text('Nuevo Cliente');
        $('#clienteForm')[0].reset();
        $('#clienteId').val('');
        $('#clienteModal').modal('show');
    });

    // Guardar Cliente
    $('#btnGuardarCliente').click(function () {
        if (!$('#clienteForm')[0].checkValidity()) {
            $('#clienteForm')[0].reportValidity();
            return;
        }

        const url = modoEdicion ? '/Gimnasios/EditarCliente' : '/Gimnasios/CrearCliente';
        const formData = $('#clienteForm').serialize();

        $.ajax({
            url: url,
            type: 'POST',
            data: formData,
            success: function (response) {
                if (response.success) {
                    $('#clienteModal').modal('hide');
                    tablaClientes.ajax.reload(null, false);
                    cargarEstadisticas();
                    toastr.success(response.message);
                }
            },
            error: function (xhr) {
                const response = xhr.responseJSON;
                toastr.error(response?.message || 'Error al guardar el cliente');
            }
        });
    });

    // Editar Cliente
    function editarCliente(id) {
        $.ajax({
            url: '/Gimnasios/GetCliente',
            type: 'GET',
            data: { id: id, gimnasioId: gimnasioId },
            success: function (data) {
                modoEdicion = true;
                $('#modalTitle').text('Editar Cliente');

                $('#clienteId').val(data.clienteId);
                $('#nombre').val(data.nombre);
                $('#apellido').val(data.apellido);
                $('#email').val(data.email);
                $('#telefono').val(data.telefono);
                $('#direccion').val(data.direccion);
                $('#dias').val(data.dias);
                $('#precio').val(data.precio);
                $('#esDiario').prop('checked', data.esDiario);

                $('#clienteModal').modal('show');
            },
            error: function () {
                toastr.error('Error al cargar los datos del cliente');
            }
        });
    }

    // Eliminar Cliente
    function eliminarCliente(id, nombre) {
        if (confirm(`¿Estás seguro de eliminar al cliente "${nombre}"?`)) {
            $.ajax({
                url: '/Gimnasios/EliminarCliente',
                type: 'POST',
                data: { id: id, gimnasioId: gimnasioId },
                success: function (response) {
                    if (response.success) {
                        tablaClientes.ajax.reload(null, false);
                        cargarEstadisticas();
                        toastr.success(response.message);
                    }
                },
                error: function (xhr) {
                    const response = xhr.responseJSON;
                    toastr.error(response?.message || 'Error al eliminar el cliente');
                }
            });
        }
    }

    // Renovar Cliente
    function abrirModalRenovar(id, nombre) {
        $('#renovarClienteId').val(id);
        $('#renovarClienteNombre').text(nombre);
        $('#renovarDias').val('30');
        $('#renovarPrecio').val('');
        $('#renovarModal').modal('show');
    }

    $('#btnConfirmarRenovar').click(function () {
        const id = $('#renovarClienteId').val();
        const dias = $('#renovarDias').val();
        const precio = $('#renovarPrecio').val();

        if (!dias || !precio) {
            toastr.error('Días y precio son requeridos');
            return;
        }

        $.ajax({
            url: '/Gimnasios/RenovarCliente',
            type: 'POST',
            data: {
                id: id,
                gimnasioId: gimnasioId,
                dias: dias,
                precio: precio
            },
            success: function (response) {
                if (response.success) {
                    $('#renovarModal').modal('hide');
                    tablaClientes.ajax.reload(null, false);
                    cargarEstadisticas();
                    toastr.success(response.message);
                }
            },
            error: function (xhr) {
                const response = xhr.responseJSON;
                toastr.error(response?.message || 'Error al renovar el cliente');
            }
        });
    });

    // Exportar Excel
    $('#btnExportClientesExcel').click(function () {
        window.location.href = '/Gimnasios/ExportClientesExcel?gimnasioId=' + gimnasioId;
    });

</script>
}

<style>
    .bg-light-primary { background-color: rgba(13, 110, 253, 0.1); }
    .bg-light-success { background-color: rgba(25, 135, 84, 0.1); }
    .bg-light-warning { background-color: rgba(255, 193, 7, 0.1); }
