let chartsLoaded = false;

function cargarVentasStats() {
    $.get('/Gimnasios/GetVentasStats', { gimnasioId }, function(d) {
        $('#ventasIngresosDia').text('$' + d.ingresosDia.toFixed(2));
        $('#ventasGastosDia').text('$' + d.gastosDia.toFixed(2));
        $('#ventasGananciaDia').text('$' + d.gananciaDia.toFixed(2));
        $('#ventasMembresias').text('$' + d.membresias30Dias.toFixed(2));
        $('#ventasClientesDiarios').text(d.clientesDiariosHoy);
        $('#ventasGananciaMes').text('$' + d.gananciaMes.toFixed(2));
        
        // Pie chart
        const ingresos = d.ingresosDia > 0 ? d.ingresosDia : d.ingresosMes || 1;
        const gastos = d.gastosDia > 0 ? d.gastosDia : d.gastosMes || 0;
        
        if (!chartsLoaded || $('#chartPie').html() === '') {
            new ApexCharts(document.querySelector("#chartPie"), {
                series: [ingresos, gastos],
                chart: { type: 'donut', height: 300 },
                labels: ['Ingresos', 'Gastos'],
                colors: ['#10b981', '#ef4444'],
                legend: { position: 'bottom' },
                plotOptions: { pie: { donut: { labels: { show: true, total: { show: true, label: 'Total', formatter: w => '$' + w.globals.seriesTotals.reduce((a,b)=>a+b,0).toFixed(2) } } } } },
                dataLabels: { enabled: true, formatter: (val) => val.toFixed(1) + '%' },
                noData: { text: 'Sin datos' }
            }).render();
        }
    });
}

function cargarCharts() {
    // Chart Diario (semana)
    $.get('/Gimnasios/GetChartData', { gimnasioId, periodo: 'semana' }, function(d) {
        new ApexCharts(document.querySelector("#chartDiario"), {
            series: [{ name: 'Ingresos', data: d.ingresos }, { name: 'Gastos', data: d.gastos }],
            chart: { type: 'bar', height: 300 },
            colors: ['#10b981', '#ef4444'],
            xaxis: { categories: d.labels }
        }).render();
    });
    
    // TABLA USUARIOS DIARIOS (Replacement for Monthly Chart)
    if (tablaUsuariosDiarios) { tablaUsuariosDiarios.destroy(); }
    tablaUsuariosDiarios = $('#tablaUsuariosDiarios').DataTable({
        ajax: { url: '/Gimnasios/GetClientesDiarios', data: { gimnasioId }, dataSrc: '' },
        columns: [
            { data: 'nombreCompleto' },
            { data: 'telefono', render: d => d || '<span class="text-muted">No registrado</span>' },
            { data: 'fechaDeCreacion', render: d => new Date(d).toLocaleDateString('es-MX') }
        ],
        pageLength: 5,
        lengthChange: false,
        searching: false,
        info: false
    });
    
    
    
    chartsLoaded = true;
}

