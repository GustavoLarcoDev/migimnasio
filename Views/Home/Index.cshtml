@section Scripts {
    <!-- AOS (opcional). Si ya lo cargas en _Layout, puedes borrar estas 2 líneas -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

    <script>
        (function () {
            // AOS init (si existe)
            if (window.AOS) {
                AOS.init({ duration: 750, once: true, offset: 80 });
            }

            // Back to top
            var btnTop = document.getElementById('btnTop');
            var toggleTop = function () {
                if (!btnTop) return;
                if (window.scrollY > 500) btnTop.classList.remove('d-none');
                else btnTop.classList.add('d-none');
            };
            window.addEventListener('scroll', toggleTop);
            toggleTop();

            if (btnTop) {
                btnTop.addEventListener('click', function () {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            }

            // Envío del formulario con fetch (degradación: si falla, hace POST normal)
            var form = document.getElementById('leadForm');
            if (!form) return;

            form.addEventListener('submit', async function (e) {
                // Si quieres forzar POST normal, comenta todo este bloque y listo.
                e.preventDefault();

                try {
                    var formData = new FormData(form);

                    // Antiforgery (si usas ValidateAntiForgeryToken en el endpoint)
                    var tokenInput = form.querySelector('input[name="__RequestVerificationToken"]');
                    var token = tokenInput ? tokenInput.value : null;

                    var res = await fetch(form.action, {
                        method: 'POST',
                        body: formData,
                        headers: token ? { 'RequestVerificationToken': token } : {}
                    });

                    if (!res.ok) throw new Error('Bad response');

                    // Mostrar toast success
                    var toastEl = document.getElementById('leadToast');
                    if (toastEl && window.bootstrap) new bootstrap.Toast(toastEl).show();

                    form.reset();
                } catch (err) {
                    // Mostrar toast error y permitir fallback si deseas
                    var toastErrEl = document.getElementById('leadToastError');
                    if (toastErrEl && window.bootstrap) new bootstrap.Toast(toastErrEl).show();
                }
            });
        })();
    </script>
}
